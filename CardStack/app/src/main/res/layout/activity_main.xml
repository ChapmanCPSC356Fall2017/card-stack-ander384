<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_rightside_up_letter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="@string/a"
        android:textSize="45sp"
        android:textColor="@android:color/holo_red_light"/>
    <ImageView
        android:id="@+id/iv_rightside_up_suit"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/heart"
        android:layout_below="@id/tv_rightside_up_letter"
        android:layout_alignLeft="@id/tv_rightside_up_letter"
        android:layout_alignRight="@id/tv_rightside_up_letter"/>

    <ImageView
        android:id="@+id/iv_center_suit"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:src="@drawable/heart"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/iv_upside_down_suit"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_above="@id/tv_upside_down_letter"
        android:layout_alignStart="@id/tv_upside_down_letter"
        android:layout_alignEnd="@id/tv_upside_down_letter"
        android:src="@drawable/heart"
        android:rotation="180"/>
    <TextView
        android:id="@+id/tv_upside_down_letter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="@string/a"
        android:rotation="180"
        android:textSize="45sp"
        android:textColor="@android:color/holo_red_light"/>

</RelativeLayout>
